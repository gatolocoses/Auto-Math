{
  "manifest_version": 2,
  "name": "Inline Math Evaluator (Firefox)",
  "version": "1.0.0",
  "description": "Auto-completes math equations in inputs and textareas; supports multiple expressions per line and units.",
  "applications": {
    "gecko": {
      "id": "inline-math-evaluator@example.com",
      "strict_min_version": "91.0"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["math.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "Inline Math Evaluator"
  }
}